@using Online_Food_Ordering_System.View_Models
@using Online_Food_Ordering_System.Views
@model List<FoodCardVeiwModel>

@{
    ViewData["Title"] = "Home Page";
    CTypeFilterViewModel FillerModel = ViewBag.Filler;
}

@section Stylesheet {

    <link rel="stylesheet" href="~/css/ProductCardPartial.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/FilterPartial.css" asp-append-version="true" />
}

<style>
     .product-container{
        width: 100%;
        height: 500px;
        display: flex;
        flex-wrap: wrap;
        flex-direction: row;
        overflow: auto;
        justify-content: space-evenly;
     }

    .home-container {
    }

</style>

<div class="home-container">

    <partial name="FilterPartial" model="FillerModel" />


    <div class="product-container" id="productContainer">

        @foreach (FoodCardVeiwModel item in @Model)
        {

            <partial name="ProductCardPartial" model="item" />

        }

      
        
    </div>
</div>